
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        arvoreBinaria arvore = new arvoreBinaria()

        int opcao = -1;

        while (opcao != 0) {
            System.out.println("1 - Inserir caractere");
            System.out.println("2 - Buscar letra pelo código Morse");
            System.out.println("3 - Remover caractere");
            System.out.println("4 - Exibir árvore");
            System.out.println("0 - Sair");
            System.out.print("Escolha uma opção: ");
            opcao = input.nextInt();
            input.nextLine(); // limpa o buffer

            if (opcao == 1) {
                System.out.print("Digite o código Morse: ");
                String codigo = input.nextLine();
                System.out.print("Digite o caractere: ");
                String caractere = input.nextLine().toUpperCase();
                arvore.inserir(codigo, caractere);
                System.out.println("Inserido com sucesso!");

            } else if (opcao == 2) {
                System.out.print("Digite o código Morse que deseja buscar: ")
                String codBusca = input.nextLine();
                String resultado = arvore.buscar(codBusca);
                if (resultado.equals("") || resultado == null) {
                    System.out.println("Nenhum caractere encontrado");
                } else {
                    System.out.println("Código Morse: " + codBusca);
                    System.out.println("Corresponde a: " + resultado);

                }

            } else if (opcao == 3) {
                System.out.print("Digite o código Morse do caractere que deseja remover: ");
                String codRemover = input.nextLine();
                arvore.remover(codRemover);

            } else if (opcao == 4) {
                System.out.println("Caracteres armazenados na árvore:");
                arvore.exibir();

            }
        }

        input.close();
    }
}
